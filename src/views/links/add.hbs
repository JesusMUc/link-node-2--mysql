<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card ">
        <div class="card-body">
          <form action="/links/add" method="POST">
            <div class="mt-3">
              <input type="text" class="form-control" name="title" placeholder="Title" autofocus>
            </div>
            <div class="mt-3">
              <input type="url" class="form-control" name="url" placeholder="URL">
            </div>
            <div class="mt-3">
              <textarea name="description" rows="2" placeholder="DESCRIPTION"></textarea>
            </div>
            <div class="mt-3">
              <button class="btn btn-success w-100">Send</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>